                  </div>
               </div>
               <div class="col-lg-4">
                  <!-- checkout place order -->
                  <div class="tp-checkout-place white-bg">
                     <h3 class="tp-checkout-place-title">Siparişiniz</h3>

                     <div class="tp-order-info-list">
                        <ul>

                           <!-- header -->
                           <li class="tp-order-info-list-header">
                              <h4>Ürün</h4>
                              <h4>Fiyat</h4>
                           </li>

                           <!-- item list -->
                           {{#each shoppingcart.productName}}
                           <li class="tp-order-info-list-desc">
                              <p>{{productName}} <span> x 1</span></p>
                              <span>₺{{newPrice}}</span>
                           </li>
                           {{/each}}

                           <!-- subtotal -->
                           <li class="tp-order-info-list-subtotal">
                              <span>Toplam</span>
                              <span>₺{{cartTotals.totalPrice}}</span>
                           </li>

                           <!-- shipping -->
                           <li class="tp-order-info-list-shipping">
                              <span>Shipping</span>
                              <div class="tp-order-info-list-shipping-item d-flex flex-column align-items-end">
                                 <span>
                                    <input id="flat_rate" type="radio" checked name="shipping">
                                    <label for="flat_rate">Kargo: <span>₺20.00</span></label>
                                 </span>
                              </div>
                           </li>

                           <!-- total -->
                           <li class="tp-order-info-list-total">
                              <span>Toplam</span>
                              <span>₺{{plus cartTotals.totalPrice 20}}</span>
                           </li>
                        </ul>
                     </div>
                     <div class="tp-checkout-payment">
                        <div class="tp-checkout-payment-item">
                           <input type="radio" id="back_transfer" value="Havale" name="orderPayment">
                           <label for="back_transfer" data-bs-toggle="direct-bank-transfer">Havale</label>
                           <div class="tp-checkout-payment-desc direct-bank-transfer">
                              <p>Ödemenizi doğrudan banka hesabımıza yapın. Lütfen ödeme referansı olarak Sipariş
                                 Kimliğinizi kullanın. Para hesabımıza geçene kadar siparişiniz gönderilmeyecektir.</p>
                           </div>
                        </div>
                        <div class="tp-checkout-payment-item">
                           <input type="radio" id="cheque_payment" value="Sanal Pos" name="orderPayment">
                           <label for="cheque_payment">Sanal POS</label>
